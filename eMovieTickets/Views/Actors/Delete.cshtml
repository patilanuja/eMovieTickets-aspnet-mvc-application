@model Actor

@{
    ViewData["Title"] = "Delete Actor";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="text-center">Delete Confirmation for @Model.FullName</h1>

            <div class="text-center my-4">
                <img class="border border-info rounded-circle mb-3" style="max-width: 150px;" id="ProfilePicturePreview" />
            </div>

            <div class="mb-3">
                <label asp-for="ProfilePictureURL" class="form-label"></label>
                <input asp-for="ProfilePictureURL" class="form-control" readonly />
                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FullName" class="form-label"></label>
                <input asp-for="FullName" class="form-control" readonly />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Bio" class="form-label"></label>
                <input asp-for="Bio" class="form-control" readonly />
                <span asp-validation-for="Bio" class="text-danger"></span>
            </div>

            <div class="d-flex  justify-content-between">
                <a class="btn btn-outline-secondary ms-2" asp-action="Index">Show All</a>
                 <form asp-action="Delete" method="post" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Confirm" class="btn btn-danger" />
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            document.addEventListener('DOMContentLoaded', function () {
                // Set initial profile picture preview
                var output = document.getElementById('ProfilePicturePreview');
                output.src = document.querySelector("#ProfilePictureURL").value;
            });
        </script>
}
