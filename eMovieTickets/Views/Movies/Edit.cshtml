@model NewMovieVM
@using eMovieTickets.Data;
@using eMovieTickets.Data.Enums

@{
    ViewData["Title"] = "Update movie";
}

<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <p>
            <h4>Update movie</h4>
        </p>

        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="StartDate" class="form-label"></label>
                                <input asp-for="StartDate" type="date" class="form-control" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="EndDate" class="form-label"></label>
                                <input asp-for="EndDate" type="date" class="form-control" />
                                <span asp-validation-for="EndDate" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ImageURL" class="form-label"></label>
                                <input asp-for="ImageURL" class="form-control" />
                                <span asp-validation-for="ImageURL" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-3">
                                <label asp-for="CinemaId" class="form-label"></label>
                                <select asp-for="CinemaId" class="form-select" asp-items="ViewBag.Cinemas"></select>
                                <span asp-validation-for="CinemaId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="MovieCategory" class="form-label"></label>
                                <select asp-for="MovieCategory" class="form-select" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ProducerId" class="form-label"></label>
                                <select asp-for="ProducerId" class="form-select" asp-items="ViewBag.Producers"></select>
                                <span asp-validation-for="ProducerId" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ActorIds" class="form-label"></label>
                                <select asp-for="ActorIds" class="form-select" asp-items="ViewBag.Actors" multiple></select>
                                <span asp-validation-for="ActorIds" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>


                    <div class="col-md-4 offset-md-4 text-center mb-3">
                        <img id="ImageUrlPreview" class="img-fluid" />
                    </div>


                    <div class="d-flex justify-content-end form-group">
                        <a class="btn btn-outline-secondary me-2" asp-action="Index">Show all</a>
                        <input type="submit" value="Update" class="btn btn-success" />
                    </div>
                    
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            $(document).ready(function () {
                var output = document.getElementById("ImageUrlPreview");
                output.src = $("#ImageURL").val();
            });

            $("#ImageURL").on("change", function () {
                var output = document.getElementById("ImageUrlPreview");
                output.src = $(this).val();
            });
        </script>
}
